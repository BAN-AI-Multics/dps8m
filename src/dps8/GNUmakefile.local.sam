ifdef MAKETRACE
  _SHELL := $(SHELL)
  SHELL = $(info [TRACE] src/dps8/GNUmakefile.local: [$@])$(_SHELL)
endif

###############################################################################
# Enables sim_debug

#TESTING=1

###############################################################################
# Enable round-robin multiple CPUs

#CFLAGS += -DROUND_ROBIN

###############################################################################
# Enable history debug tool

#CFLAGS += -DHDBG

###############################################################################
# Enable ISOLTS compatibility

#CFLAGS += -DISOLTS -DL68 -DWAM

###############################################################################
# Enable Level-68 mode

#CFLAGS += -DL68

###############################################################################
# Enable panel display support

#CFLAGS += -DPANEL

###############################################################################
# Enable WAM

#CFLAGS += -DWAM
#CFLAGS += -Ddo_selftestPTWAM

###############################################################################
# Other local settings here

###############################################################################

print-% : ; $(info local: $* is a $(flavor $*) variable set to [$($*)]) @true

