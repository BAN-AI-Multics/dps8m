  option  Multics

    name    Bug_B_Gone_2
    
    entry   _main_BBG_2

    segref	UtilsA, ioa 

    "
    " we'll store stuff on our stack frame ...
    "
    temp    saveX2      " for saving x2 for subroutine call(s)
    tempd   save2
    tempd   save2p


L1:     bss     1
L2:     bss     1

        even
LAQ:
LA:     bss     1
LQ:     bss     1

its1:   its     015, 0      " pointing to the base of seg o15

_main_BBG_2:
    push
    
    tsp2    ioa
    acc     /BBG-2 ...\r\n/

    tsx2    BBG2_Test1

    tsx2    DV3D_Test

    return

"
" X0 is 0400
"
"    The ITS is 015:000000
"
"    The addressing mode is address_of_ITP, *X0
"
"    So, get the ITS, and add X0 to it's offset to form the final address: 015:0400
"
"    Somehow, dps8m gets 0400:015 ....
"

BBG2_Test1:
    stx2    saveX2      " save return address

    tsp2    ioa
    acc     /ITS test 1 ...\r\n/

    eax0    0400        " 0400 => x0

    "epp     2, its1, *x0
    "lda     its1, *x0

    epp     2, =its(015,0)
    lda     pr2|0,*x0
    sta     LA

    tsp2    ioa
    acc     /    Result is: ^o (Should be  5 00000 7641 01)\r\n/
    arg     LA

    ldx2    saveX2
    tra     0,2

"
" Try DV3D operation per CAC's bug report ...
"

DV3D_Test:
    stx2    saveX2      " save return address

    tsp2    ioa
    acc     /DV3D test ...\r\n/

    eax1    two_25
    stx1    $1
    eax1    two_26
    stx1    $2

  	dv3d	(),(),()
$1:	desc4ns	two_25,8
$2:	desc9fl	two_26,11
	desc9fl	out,13

    tsp2    ioa
    acc     /    Result is: ^a^a^a^a ^w (Should be)\r\n/
    arg out
    arg out+1
    arg out+2
    arg out+3
    arg out+3

  	dv3d	(),(),()
	desc4ns	two_25b,8
	desc9fl	two_26b,11
	desc9fl	out,13

    tsp2    ioa
    acc     /    Result is: ^a^a^a^a ^w (Should be)\r\n/
    arg out
    arg out+1
    arg out+2
    arg out+3
    arg out+3

  	dv3d	(),(),()
	desc4ns	two_25c,8
	desc9fl	two_26c,11
	desc9fl	out,13

    tsp2    ioa
    acc     /    Result is: ^a^a^a^a ^w (Should be)\r\n/
    arg out
    arg out+1
    arg out+2
    arg out+3
    arg out+3

    ldx2    saveX2
    tra     0,2

two_25:	ac4	"33554432"
two_26:	aci	"+067108864\000"

two_25b:	ac4	"77554432"
two_26b:	aci	"+067108864\005"

two_25c:	ac4	"77554432"
two_26c:	aci	"+067108864\0377"


